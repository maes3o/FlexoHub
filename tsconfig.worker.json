{
  "extends": "./tsconfig.node.json",
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.worker.tsbuildinfo",
    // add Cloudflare Workers types and ensure WebWorker lib is available
    "types": ["@cloudflare/workers-types", "vite/client", "./worker-configuration.d.ts"],
    "lib": ["ES2023", "WebWorker"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/worker"]
}
